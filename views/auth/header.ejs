<header class="mb-auto">
    <div>
        <h3 class="float-md-start mb-0">
            D-Board
        </h3>
        <nav class="nav nav-masthead justify-content-center float-md-end">
            <% if (user) { %>
                
                welcome : <%= user.Email %>
                <a class="nav-link fw-bold py-1 px-0" aria-current="page" href="/signOut">
                    Sign out
                </a>

            <% } else { %>

                <a class="nav-link fw-bold py-1 px-0 <%= page === 'Login' ? 'active': null %>" aria-current="page" href="/Login">
                    Log in
                </a>
                <a class="nav-link fw-bold py-1 px-0 <%= page === 'SignUp' ? 'active': null %>" href="/SignUp">
                    Sign Up
                </a>
            <% }%>
        </nav>
    </div>
</header>